{
  "name": "smart-housing",
  "version": "0.0.1",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "account": "yarn workspace @smart-housing/backend account",
    "chain": "yarn workspace @smart-housing/backend chain",
    "compile": "yarn workspace @smart-housing/backend compile",
    "deploy": "yarn workspace @smart-housing/backend deploy",
    "flatten": "yarn workspace @smart-housing/backend flatten",
    "fork": "yarn workspace @smart-housing/backend fork",
    "format": "yarn next:format && yarn hardhat:format",
    "generate": "yarn workspace @smart-housing/backend generate",
    "hardhat-verify": "yarn workspace @smart-housing/backend hardhat-verify",
    "hardhat:format": "yarn workspace @smart-housing/backend format",
    "hardhat:coverage": "yarn workspace @smart-housing/backend coverage",
    "hardhat:lint": "yarn workspace @smart-housing/backend lint",
    "hardhat:lint-staged": "yarn workspace @smart-housing/backend lint-staged",
    "hardhat:test": "yarn workspace @smart-housing/backend test",
    "postinstall": "husky install",
    "next:build": "yarn workspace @smart-housing/ui build",
    "next:check-types": "yarn workspace @smart-housing/ui check-types",
    "next:format": "yarn workspace @smart-housing/ui format",
    "next:lint": "yarn workspace @smart-housing/ui lint",
    "next:serve": "yarn workspace @smart-housing/ui serve",
    "precommit": "lint-staged",
    "start": "yarn workspace @smart-housing/ui dev",
    "test": "yarn hardhat:test",
    "vercel": "yarn workspace @smart-housing/ui vercel",
    "vercel:yolo": "yarn workspace @smart-housing/ui vercel:yolo",
    "verify": "yarn workspace @smart-housing/backend verify"
  },
  "devDependencies": {
    "husky": "~8.0.3",
    "lint-staged": "~13.2.2"
  },
  "packageManager": "yarn@3.2.3",
  "engines": {
    "node": ">=18.17.0"
  }
}
